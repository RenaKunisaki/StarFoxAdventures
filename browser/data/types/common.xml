<?xml version="1.0"?>
<?xml-model href="types.xsd"?>
<types>
    <!-- typedefs for ghidra exports -->
    <typedef name="undefined" type="u8" />
    <typedef name="undefined1" type="u8" />
    <typedef name="undefined2" type="u16" />
    <typedef name="undefined4" type="u32" />
    <typedef name="unk8" type="u8" />
    <typedef name="unk16" type="u16" />
    <typedef name="unk32" type="u32" />
    <typedef name="pointer" type="u32" />

    <!-- types used throughout the game -->
    <struct name="vec2s">
        <field name="x" type="s16" />
        <field name="y" type="s16" />
    </struct>
    <struct name="vec3f">
        <field name="x" type="float" />
        <field name="y" type="float" />
        <field name="z" type="float" />
    </struct>
    <struct name="vec3i">
        <field name="x" type="int" />
        <field name="y" type="int" />
        <field name="z" type="int" />
    </struct>
    <struct name="vec3s">
        <field name="x" type="s16" />
        <field name="y" type="s16" />
        <field name="z" type="s16" />
    </struct>

    <!-- include the rest -->
    <include path="./gcn/iso.xml" />
    <include path="./gcn/gci.xml" />
    <include path="./sfa/sfa.xml" />
</types>
